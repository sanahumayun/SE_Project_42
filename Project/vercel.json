{
    "version": 2,
    "builds": [
      {
        "src": "Project/server/index.js",  
        "use": "@vercel/node"
      },
      {
        "src": "Project/client/package.json", 
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }      
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)", 
        "dest": "Project/server/index.js"      
      },
      {
        "src": "/(.*)", 
        "dest": "Project/client/build/$1"     
      }
    ]
  }